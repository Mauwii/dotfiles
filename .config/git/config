[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait
[pull]
	rebase = false
	ff = true
[push]
	default = current
[diff]
	tool = vscode
	rename = true
[difftool "vscode"]
	cmd = code --new-window --wait --diff --new-window $LOCAL $REMOTE
[init]
	defaultBranch = main
[color]
	ui = auto
[fetch]
	prune = true
