[core]
    editor = code --wait
    fileMode = false
    excludesFile = ~/.gitignore_global
[pull]
	rebase = false
	ff = true
[push]
	default = "current"
[diff]
	tool = vscode
[difftool "vscode"]
    cmd = code --new-window --wait --diff $LOCAL $REMOTE
[init]
	defaultBranch = main
[color]
	ui = auto
[fetch]
	prune = true
[alias]
    delete-local-merged = fetch && git branch --merged | egrep -v 'master' | xargs git branch -d
[include]
    path = ~/.config/.local.gitconfig